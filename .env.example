NODE_ENV=development
PORT=3011

# Authentication mode: BFF or DIRECT
AUTH_MODE=BFF

# Backend API Base URL (for Direct mode or BFF proxy target)
EXCHANGE_API_BASE_URL=http://localhost:9977

# Cookie settings (BFF mode)
AUTH_COOKIE_NAME=access_token
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=Strict
AUTH_COOKIE_MAXAGE=900

# i18n settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,zh-TW

# App settings
NEXT_PUBLIC_APP_NAME=Mini Exchange Admin
NEXT_PUBLIC_APP_VERSION=0.1.0

# Optional: Error monitoring
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
