# Use pnpm as package manager
package-manager=pnpm

# Enable strict peer dependencies
strict-peer-dependencies=true

# Auto install peer dependencies
auto-install-peers=true

# Use shamefully-hoist for better compatibility
shamefully-hoist=false

# Enable public-hoist-pattern for certain packages
public-hoist-pattern[]=*eslint*,*prettier*

# Registry settings (optional - defaults to npm registry)
registry=https://registry.npmjs.org/

# Resolution settings
resolution-mode=highest
